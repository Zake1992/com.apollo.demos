<?xml version='1.0' encoding='utf-8'?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
    <command>
      <action class="com.apollo.demos.karaf.shell.impl.command.ApolloHello" />
    </command>

    <command>
      <action class="com.apollo.demos.karaf.shell.impl.command.FeatureApolloList" />
    </command>

    <command>
      <action class="com.apollo.demos.karaf.shell.impl.command.ApolloBundleDetails" />

      <completers>
        <ref component-id="apolloBundleNameCompleter" />
      </completers>

      <optional-completers>
        <entry key="-o" value-ref="apolloOptionCompleter"/>
      </optional-completers>
    </command>
  </command-bundle>

  <bean id="apolloBundleNameCompleter" class="com.apollo.demos.karaf.shell.impl.completer.ApolloBundleName" />
  <bean id="apolloOptionCompleter" class="com.apollo.demos.karaf.shell.impl.completer.ApolloOption" />
</blueprint>
